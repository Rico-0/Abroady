<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reve.abroady">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.ApplicationClass"
        android:allowBackup="true"
        android:icon="@drawable/logo_abroady"
        android:usesCleartextTraffic="true"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_abroady"
        android:supportsRtl="true"
        android:theme="@style/Theme.Abroady">
        <!-- 안드로이드 12 타겟팅 시 필수
        <activity android:name="com.nhn.android.naverlogin.ui.OAuthCustomTabActivity"
            android:exported="true" /> -->
        <activity
            android:name=".ui.community.WritePostActivity"
            android:exported="true" />
        <activity
            android:name=".ui.start.StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.community.MakeNewBoardActivity"  android:exported="false" />
        <activity android:name=".ui.community.SearchBoardActivity"   android:exported="false" />
        <activity android:name=".ui.community.BoardsEditActivity"  android:exported="false" />
        <activity android:name=".ui.community.BoardsActivity"  android:exported="false" />
        <activity android:name=".ui.community.BoardActivity"   android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Redirect URI: "kakao{NATIVE_APP_KEY}://oauth" -->
                <data
                    android:host="oauth"
                    android:scheme="kakao{@string/kakao_native_key}" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />
    </application>

</manifest>