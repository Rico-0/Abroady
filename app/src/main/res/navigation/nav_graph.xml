<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.reve.abroady.presentation.login.fragment.LoginFragment"
        android:label="loginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_forgot_password"
            app:destination="@id/forgotPasswordFragment"
            app:enterAnim="@anim/slide_in"
            app:popEnterAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_terms_of_service"
            app:destination="@id/TermsOfServiceFragment"
            app:enterAnim="@anim/slide_in"
            app:popEnterAnim="@anim/slide_out" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.reve.abroady.presentation.login.fragment.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment"
        tools:layout="@layout/fragment_forgot_password" />

    <fragment
        android:id="@+id/TermsOfServiceFragment"
        android:name="com.reve.abroady.presentation.login.fragment.TermsOfServiceFragment"
        android:label="termsOfServiceFragment"
        tools:layout="@layout/fragment_terms_of_service" />

</navigation>