<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_party_root"
        android:layout_width="@dimen/party_item_width"
        android:layout_height="wrap_content"
        android:background="@drawable/community_item_shape"
        android:padding="@dimen/margin15">

        <TextView
            android:id="@+id/party_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:text="17:30"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/party_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin8"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:text="Sinchon"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen15"
            app:layout_constraintStart_toEndOf="@id/party_time"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/party_content_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            app:layout_constraintStart_toStartOf="@id/party_time"
            app:layout_constraintTop_toBottomOf="@id/party_time">

            <ImageView
                android:id="@+id/party_content_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_description" />

            <TextView
                android:id="@+id/party_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_toRightOf="@+id/party_content_icon"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:text="having japanese dishes"
                android:textColor="@color/black_letter"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/party_location_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin8"
            app:layout_constraintStart_toStartOf="@id/party_content_layout"
            app:layout_constraintTop_toBottomOf="@id/party_content_layout">

            <ImageView
                android:id="@+id/party_location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_location_default" />

            <TextView
                android:id="@+id/party_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_toRightOf="@+id/party_location_icon"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:text="Donburi Mono"
                android:textColor="@color/black_letter"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/party_people_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin8"
            app:layout_constraintStart_toStartOf="@id/party_location_layout"
            app:layout_constraintTop_toBottomOf="@id/party_location_layout">

            <ImageView
                android:id="@+id/party_people_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_participant" />

            <TextView
                android:id="@+id/party_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_toRightOf="@+id/party_people_icon"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:text="3/4 participating"
                android:textColor="@color/black_letter"
                android:textSize="12sp" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>