<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_one_party_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/one_party_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/menubar_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/button_go_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:src="@drawable/button_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="@string/party"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen20" />

            <ImageView
                android:id="@+id/bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/dimen20"
                android:src="@drawable/icon_bookmark_default" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/menubar_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin1"
            android:background="@color/darkgray_ham"
            app:layout_constraintBottom_toTopOf="@+id/party_post_scroll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/one_party_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/party_post_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menubar_line">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/party_all_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/party_comments_layout">

                <RelativeLayout
                    android:id="@+id/user_writtenTime_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin60"
                    android:background="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/user_profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin20"
                        android:src="@drawable/icon_profile_middle" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_toRightOf="@+id/user_profile_image"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:text="Donald Duck"
                        android:textColor="@color/letter"
                        android:textSize="@dimen/dimen15" />

                    <TextView
                        android:id="@+id/written_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin20"
                        android:fontFamily="@font/notosanskr_regular"
                        android:text="16:37"
                        android:textColor="@color/darkgray_ham" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/hr_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_boundary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_writtenTime_layout" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/party_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hr_1">

                    <TextView
                        android:id="@+id/party_available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin20"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:text="@string/available"
                        android:textColor="@color/main"
                        android:textSize="@dimen/dimen18"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/party_post_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_marginTop="@dimen/margin20"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:text="Let's have japanese dishes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen18"
                        app:layout_constraintStart_toEndOf="@+id/party_available"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/party_post_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin20"
                        android:fontFamily="@font/notosanskr_regular"
                        android:includeFontPadding="false"
                        android:text="Inviting you to my hidden place.\nCome and enjoy with me!"
                        android:textColor="@color/letter"
                        android:textSize="@dimen/dimen15"
                        app:layout_constraintStart_toStartOf="@id/party_available"
                        app:layout_constraintTop_toBottomOf="@+id/party_available" />

                    <LinearLayout
                        android:id="@+id/party_info_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin20"
                        android:background="@color/white"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@id/party_post_content"
                        app:layout_constraintTop_toBottomOf="@id/party_post_content">

                        <RelativeLayout
                            android:id="@+id/party_date_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/party_calendar_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/icon_calender_party" />

                            <TextView
                                android:id="@+id/party_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin10"
                                android:layout_toRightOf="@+id/party_calendar_icon"
                                android:fontFamily="@font/notosanskr_regular"
                                android:includeFontPadding="false"
                                android:text="6/28 17:30"
                                android:textColor="@color/letter"
                                android:textSize="@dimen/dimen15" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/party_location_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10">

                            <ImageView
                                android:id="@+id/party_location_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/icon_location_middle" />

                            <TextView
                                android:id="@+id/party_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin10"
                                android:layout_toRightOf="@+id/party_location_icon"
                                android:fontFamily="@font/notosanskr_regular"
                                android:includeFontPadding="false"
                                android:text="Sinchon"
                                android:textColor="@color/letter"
                                android:textSize="@dimen/dimen15" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/party_participating_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10">

                            <ImageView
                                android:id="@+id/party_person_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/icon_participant_middle" />

                            <TextView
                                android:id="@+id/party_participating_people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin10"
                                android:layout_toRightOf="@+id/party_person_icon"
                                android:fontFamily="@font/notosanskr_regular"
                                android:includeFontPadding="false"
                                android:text="3/4 participating"
                                android:textColor="@color/letter"
                                android:textSize="@dimen/dimen15" />

                            <RelativeLayout
                                android:id="@+id/see_participants_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/margin40">

                                <TextView
                                    android:id="@+id/see_participants_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:text="@string/see_participants"
                                    android:textColor="@color/darkgray_ham"
                                    android:textSize="@dimen/dimen12" />

                                <ImageView
                                    android:id="@+id/see_participants_more_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/margin5"
                                    android:layout_toRightOf="@+id/see_participants_text"
                                    android:src="@drawable/icon_party_more" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/party_place_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin20"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/party_info_layout">

                        <ImageView
                            android:id="@+id/background_place_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/background_place_location" />

                        <TextView
                            android:id="@+id/party_place_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin60"
                            android:layout_marginTop="@dimen/margin8"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:text="Donburi Mono"
                            android:textColor="@color/letter"
                            android:textSize="@dimen/dimen12" />

                        <TextView
                            android:id="@+id/party_place_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin60"
                            android:layout_marginTop="@dimen/margin28"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:text="46, Yeonsei-ro 4-git, Seodaemun-gu, Seoul"
                            android:textColor="@color/darkgray_ham"
                            android:textSize="@dimen/dimen10" />

                    </FrameLayout>

                    <ImageView
                        android:id="@+id/hr_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin20"
                        android:src="@drawable/line_boundary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/party_place_layout" />

                    <LinearLayout
                        android:id="@+id/party_like_comment_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/hr_2">

                        <RelativeLayout
                            android:id="@+id/party_like_layout"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/margin50"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/like_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/icon_like_medium_default" />

                            <TextView
                                android:id="@+id/like_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin8"
                                android:layout_toRightOf="@+id/like_icon"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:text="@string/like"
                                android:textColor="@color/letter"
                                android:textSize="@dimen/dimen12" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/party_comment_layout"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/margin50"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/comment_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/icon_comment_medium" />

                            <TextView
                                android:id="@+id/comment_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin8"
                                android:layout_toRightOf="@+id/comment_icon"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:text="@string/comment"
                                android:textColor="@color/letter"
                                android:textSize="@dimen/dimen12" />

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adViewBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin8"
                    app:layout_constraintTop_toBottomOf="@+id/party_content_layout"
                    app:adSize="BANNER"
                    app:adUnitId="ca-app-pub-3940256099942544/6300978111" />

                <RelativeLayout
                    android:id="@+id/comment_sort_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin8"
                    android:background="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/adViewBanner">

                    <ImageView
                        android:id="@+id/comment_default_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin20"
                        android:layout_marginTop="@dimen/margin40"
                        android:src="@drawable/icon_comment_circle_colored" />

                    <TextView
                        android:id="@+id/comment_default_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin5"
                        android:layout_toRightOf="@+id/comment_default_icon"
                        android:fontFamily="@font/notosanskr_medium"
                        android:text="@string/default_comment"
                        android:textColor="@color/letter"
                        android:textSize="@dimen/dimen12" />

                    <ImageView
                        android:id="@+id/comment_recent_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin15"
                        android:layout_marginTop="@dimen/margin20"
                        android:layout_toRightOf="@+id/comment_default_button"
                        android:src="@drawable/icon_comment_circle_default" />

                    <TextView
                        android:id="@+id/comment_recent_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin5"
                        android:layout_toRightOf="@+id/comment_recent_icon"
                        android:fontFamily="@font/notosanskr_medium"
                        android:text="@string/recent_comment"
                        android:textColor="@color/darkgray_ham"
                        android:textSize="@dimen/dimen12" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/comment_sort_layout">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/party_comment_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin15"
                        android:paddingBottom="@dimen/margin120"
                        app:layout_constrainedHeight="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/comment_sort_layout"
                        app:layout_constraintVertical_bias="0.0"
                        tools:listitem="@layout/item_party_comment" />

                    <!-- 댓글 구성 레이아웃 : 댓글이 없으면 회색 화면, 있으면 댓글들을 보여줌 -->

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/party_participate_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin80"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/menubar_line_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin1"
                android:background="@color/darkgray_ham" />

            <TextView
                android:id="@+id/party_participate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/button_square_long_colored_light"
                android:fontFamily="@font/notosanskr_medium"
                android:gravity="center"
                android:text="@string/participate"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen18" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>